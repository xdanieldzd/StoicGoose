            </MenuItem>
            <MenuItem Header="_Emulation">
                <MenuItem Name="PauseMenuItem" Header="_Pause" Click="PauseMenuItem_Click" />
                <MenuItem Name="ResetMenuItem" Header="_Reset" Click="ResetMenuItem_Click" />
            </MenuItem>
            <!--
            <MenuItem Header="_Options">

            </MenuItem>
            <MenuItem Header="_Cheats">

            </MenuItem>
            <MenuItem Header="_Help">

            </MenuItem>
            -->
        </Menu>
        <glWpfControl:GLWpfControl x:Name="OpenTkControl" Render="OpenTkControl_Render" SizeChanged="OpenTkControl_SizeChanged" />
    </DockPanel>
</Window>
